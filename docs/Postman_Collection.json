{
  "info": {
    "name": "Social Gaming Platform - Phase-1",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - OTP",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/auth/otp", "host": ["{{base_url}}"], "path": ["auth","otp"] },
        "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+919876543210\",\n  \"deviceId\": \"device-abc-123\"\n}" }
      }
    },
    {
      "name": "Auth - Verify",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{base_url}}/auth/verify", "host": ["{{base_url}}"], "path": ["auth","verify"] },
        "body": { "mode": "raw", "raw": "{\n  \"phone\": \"+919876543210\",\n  \"token\": \"123456\",\n  \"deviceId\": \"device-abc-123\"\n}" }
      }
    },
    {
      "name": "Wallet - Get",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" } ],
        "url": { "raw": "{{base_url}}/wallet", "host": ["{{base_url}}"], "path": ["wallet"] }
      }
    },
    {
      "name": "Match - Start",
      "request": {
        "method": "POST",
        "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" }, { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{base_url}}/match/start", "host": ["{{base_url}}"], "path": ["match","start"] },
        "body": { "mode": "raw", "raw": "{}" }
      }
    },
    {
      "name": "Match - End",
      "request": {
        "method": "POST",
        "header": [ { "key": "Authorization", "value": "Bearer {{access_token}}" }, { "key": "Content-Type", "value": "application/json" } ],
        "url": { "raw": "{{base_url}}/match/end", "host": ["{{base_url}}"], "path": ["match","end"] },
        "body": { "mode": "raw", "raw": "{\n  \"matchId\": \"{{match_id}}\",\n  \"clientRoll\": 4\n}" }
      }
    }
  ],
  "event": [],
  "variable": [
    { "key": "base_url", "value": "http://localhost:4000" },
    { "key": "access_token", "value": "" },
    { "key": "match_id", "value": "" }
  ]
}